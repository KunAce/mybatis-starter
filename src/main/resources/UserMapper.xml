<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mymapper">
    
    <select id="getUserById" resultType="orm.User">
        SELECT * FROM user WHERE id=#{id};
    </select>

    <insert id="addUser" parameterType="orm.User">
        INSERT INTO user (username, address) VALUES (#{username},#{address});
    </insert>

    <insert id="addUser2" parameterType="orm.User">
        <selectKey resultType="java.lang.String" keyProperty="id" order="BEFORE">
            SELECT uuid();
        </selectKey>
    INSERT INTO user (id, username,address) VALUES (#{id},#{username}, #{address});
    </insert>

    <delete id="deleteUserById" parameterType="java.lang.String">
        DELETE FROM user WHERE id=#{id};
    </delete>

    <update id="updateUser" parameterType="orm.User">
        UPDATE user SET username = #{username} WHERE id = #{id};
    </update>

    <select id="getAllUser" resultType="orm.User">
        SELECT * FROM user;
    </select>

</mapper>